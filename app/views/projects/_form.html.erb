
<%= form_for @project do |f| %>

<% if (@project.start_date && @project.active?) && (current_user.role != "admin") %>
<p> You cannot edit an active project </p>
<% else %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :summary %>
  <%= f.text_area :summary %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :target %>
  <%= f.number_field :target %>
  <br>
  <%= f.label :start_date  %>
  <div class="date-select">
  <%= f.date_select :start_date %>
  </div>
  <br>
  <%= f.label :days %>
  <%= f.number_field :days %>
  <br>
  <% @categories = Category.all %>
  <%= f.label :category_id %>
  <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name') %>
  <br>
  <%= f.label :location %>
  <%= f.select :location, options_for_select(@cities.map{|c| [c,c]}) %>
  <br>
  <%= f.label :project_image %><br>
  <%= f.file_field :project_image %>
  <br>
  <%= f.submit button_text %>

<% end %>
<% end %>
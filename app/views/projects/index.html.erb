<%= form_tag projects_path, method: "get" do %>
  <%= select_tag :category_id, options_for_select(@categories.map {|c| [c.name, c.id]}, selected: @projects.first.category.id) %>
  <%= submit_tag "Filter" %>
<% end %>

<% @projects.each do |project| %>

<p><%= link_to "#{project.name}", project_path(project) %> </p>

<%end %>

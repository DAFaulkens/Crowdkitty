<% @projects.each do |project| %>
<div class='card'>
  <div class="card-image">
    <%= link_to image_tag(project.project_image), project_path(project) %>
  </div>
  <div class='card-header'>
    <%= link_to "#{project.name}", project_path(project) %> 
    <% case @request_type %>
    <% when 'finishing_soon' %>
    <p><%= project.days_remaining %> days left</p>
    <% when 'most_popular' %>
    <p><%= project.pledges.count %> pledges</p>
    <% end %>
  </div>
  <div class='card-copy'>
    <p><%= project.summary %></p>
  </div>
</div>
<% end %>

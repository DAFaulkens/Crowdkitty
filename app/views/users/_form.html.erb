<br>
    <div class="row">
        <%= form_for(@user) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :address1 %>
        <%= f.text_field :address1 %>

        <%= f.label :address2 %>
        <%= f.text_field :address2 %>

        <%= f.label :city %>
        <%= f.text_field :city %>

        <%= f.label :postcode %>
        <%= f.text_field :postcode %>

        <%= f.label :user_image %><br />
        <%= f.file_field :user_image %>

        <div class="actions">
            <%= f.submit %>
        </div>
    </div>
<% end %>